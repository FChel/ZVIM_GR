<core:FragmentDefinition 
	xmlns="sap.m" 
	xmlns:l="sap.ui.layout" 
	xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core">
	<Dialog title="{i18n>filter.dlg.header}" class="sapUiSizeCompact" draggable="true"
		contentWidth="{path: 'device>/system', formatter: '.formatter.liDialogWidth'}">
		<beginButton>
			<Button id="OK" type="Emphasized" text="OK" press="onFilterOK"/>
		</beginButton>
		<endButton>
			<Button text="Cancel" press="onFilterCancel"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>